{
    "name": "onix-systems-php/hyperf-file-upload",
    "type": "extension",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "An extension to maintain file upload and assignation",
    "autoload": {
        "psr-4": {
            "OnixSystemsPHP\\HyperfFileUpload\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OnixSystemsPHP\\HyperfFileUpload\\Test\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "onix-systems-php/hyperf-core": ">=1.0.10",
        "onix-systems-php/hyperf-actions-log": "^1.0",
        "hyperf/database": "^2.2|^3.0",
        "hyperf/config": "~2.2.0|^3.0",
        "hyperf/contract": "^2.2|^3.0",
        "hyperf/db-connection": "^2.2|^3.0",
        "hyperf/filesystem": "^2.2|^3.0",
        "hyperf/guzzle": "^2.2|^3.0",
        "hyperf/translation": "^2.2|^3.0",
        "hyperf/validation": "^2.2|^3.0",
        "hyperf/utils": "^2.2|^3.0",
        "intervention/image": "^2.7",
        "league/flysystem": "^2.0|^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.2|^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "OnixSystemsPHP\\HyperfFileUpload\\ConfigProvider"
        }
    }
}
